<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<bean id="medicalInsurence" class="com.ram.model.MedicalInsurence">
		<property name="insurencePolicyNumber" value="1919191"></property>
		<property name="insuredAmount" value="15000"></property>
	</bean>

	<bean id="employee" class="com.ram.model.Employee">
		<property name="id" value="100"></property>
		<property name="name" value="Peter"></property>

		<property name="insuredAmountEqualTo10000" value="#{medicalInsurence.insuredAmount == 10000}"></property>
		<property name="insuredAmountNotEqualTo10000" value="#{medicalInsurence.insuredAmount != 10000}"></property>

		<property name="insuredAmountLessThan10000" value="#{medicalInsurence.insuredAmount lt 10000}"></property>
		<property name="insuredAmountLessThanOrEqualTo10000" value="#{medicalInsurence.insuredAmount le 10000}"></property>

		<property name="insuredAmountGreaterThan10000" value="#{medicalInsurence.insuredAmount gt 10000}"></property>
		<property name="insuredAmountGreaterThanOrEqualTo10000" value="#{medicalInsurence.insuredAmount ge 10000}"></property>

	</bean>
	
</beans>
